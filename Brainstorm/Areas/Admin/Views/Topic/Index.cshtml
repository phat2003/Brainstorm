@model IEnumerable<Topic>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Danh Sách Chủ Đề (Topic)</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Topic" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Thêm Chủ Đề Mới
            </a>
        </div>
    </div>

    <br />

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Tên Chủ Đề</th>
                <th>Hạn Nộp Ý Tưởng</th>
                <th>Hạn Đóng Bình Luận</th>
                <th>Thao Tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Name</td>
                    @* Hiển thị ngày giờ theo định dạng dễ đọc *@
                    <td>@obj.ClosureDate.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@obj.FinalClosureDate.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Topic" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-warning mx-2">
                                <i class="bi bi-pencil-square"></i> Sửa
                            </a>
                            <a asp-controller="Topic" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i> Xóa
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>