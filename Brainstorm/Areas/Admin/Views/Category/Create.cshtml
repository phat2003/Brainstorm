@model Category

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Thêm Danh Mục Mới</h2>
            <hr />
        </div>

        @* Hiển thị tất cả lỗi nếu có *@
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="mb-3 row">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Tạo Mới</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary border form-control">
                    Quay Lại
                </a>
            </div>
        </div>
    </div>
</form>

@* Script hỗ trợ validate ở phía Client (ngay trên trình duyệt) *@
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}