@model Idea

@{
    ViewData["Title"] = "Xóa Ý Tưởng";
}

<div class="container p-3">
    <h2 class="text-danger">@ViewData["Title"]</h2>
    <hr />
    <h4>Bạn có chắc chắn muốn xóa ý tưởng này?</h4>
    <dl class="row">
        <dt class="col-sm-2">Nội dung</dt>
        <dd class="col-sm-10">@Model.Text</dd>

        <dt class="col-sm-2">Danh mục</dt>
        <dd class="col-sm-10">@Model.Category?.Name</dd>

        <dt class="col-sm-2">Chủ đề</dt>
        <dd class="col-sm-10">@Model.Topic?.Name</dd>

        <dt class="col-sm-2">Ngày tạo</dt>
        <dd class="col-sm-10">@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</dd>

        @if (!string.IsNullOrEmpty(Model.FilePath))
        {
            <dt class="col-sm-2">Tệp đính kèm</dt>
            <dd class="col-sm-10">
                <a href="~/@Model.FilePath" target="_blank">Xem file</a>
            </dd>
        }
    </dl>
    <form asp-action="DeletePost" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </form>
</div>
